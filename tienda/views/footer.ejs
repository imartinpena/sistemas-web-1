<!-- Aviso de cookies -->
<div id="cookieConsent" style="background-color: #f0f0f0; padding: 10px; position: fixed; bottom: 0; width: 100%; text-align: center; display: none;">
    Este sitio utiliza cookies para mejorar tu experiencia. 
    <button onclick="acceptCookies()">Aceptar</button>
</div>

<!-- Script para manejar el aviso de cookies -->
<script>
    // Mostrar el aviso de cookies si no se ha aceptado previamente
    function checkCookieConsent() {
        if (!sessionStorage.getItem('cookiesAccepted')) { // Verifica si el usuario ya ha aceptado las cookies
            document.getElementById('cookieConsent').style.display = 'block'; // Muestra el aviso de cookies
        }
    }

    // Función para aceptar cookies
    function acceptCookies() {
        sessionStorage.setItem('cookiesAccepted', 'true'); // Guarda en la sesión que el usuario ha aceptado las cookies
        document.getElementById('cookieConsent').style.display = 'none'; // Oculta el aviso de cookies
    }

    // Verificar al cargar la página si se debe mostrar el aviso
    checkCookieConsent();
</script>
